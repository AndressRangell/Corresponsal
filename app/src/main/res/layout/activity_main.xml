<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="334dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/relativeProductos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="40dp">

        <Button
            android:id="@+id/btnBanks"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#fff" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:translationZ="10dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/banco"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Bancos"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="110dp"
            android:translationZ="10dp"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativePerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="40dp">

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#fff" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:translationZ="10dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/perfil"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Perfil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:translationZ="10dp"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeHistorial"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativePerfil"
        android:layout_marginLeft="40dp">

        <Button
            android:id="@+id/btnHistorical"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#fff" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:translationZ="10dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/historial"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Historial"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:translationZ="10dp"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeProductos"
        android:layout_marginRight="40dp">

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#fff"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:translationZ="10dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/cerrar"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="110dp"
            android:translationZ="10dp"
            android:gravity="center_horizontal" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>