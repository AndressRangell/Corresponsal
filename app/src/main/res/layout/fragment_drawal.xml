<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DrawalFragment">

    <EditText
        android:id="@+id/txtCountDrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:hint="Número de cuenta"
        android:textSize="25sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/txtCardDrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="120dp"
        android:hint="Cédula del titular"
        android:textSize="25sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/txtPinDrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="200dp"
        android:hint="Contraseña o PIN"
        android:textSize="25sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/txtAmountDrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="280dp"
        android:hint="Monto a retirar"
        android:textSize="25sp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnDrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_app"
        android:text="Retirar"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginTop="360dp"
        android:layout_marginHorizontal="40dp"/>

</FrameLayout>